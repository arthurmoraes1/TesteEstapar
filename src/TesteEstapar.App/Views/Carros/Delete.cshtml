@using TesteEstapar.App.Extensions
@model TesteEstapar.App.ViewModels.CarroViewModel

@{
    ViewData["Title"] = "Excluir Carro";
}

<h1>@ViewData["Title"]</h1>

<vc:Summary></vc:Summary>
<div>
    <h4>Esta ação será permanente!</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Modelo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Modelo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Placa)
        </dt>
        <dd class="col-sm-10">
            @this.FormataPlaca(Model.Placa)
