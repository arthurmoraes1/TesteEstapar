@model TesteEstapar.App.ViewModels.ResponsavelManobraViewModel

@{
    ViewData["Title"] = "Editar " + Model.Manobrista.Nome;
}

<h4 style="padding-top: 30px">@ViewData["Title"] </h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <form enctype="multipart/form-data" asp-action="Edit">
            <vc:Summary></vc:Summary>
            <div class="form-group">
                <input type="hidden" asp-for="ManobristaId" />
                <br />
                <label><b>@Model.Manobrista.Nome</b></label>
            </div>
            <div class="form-group">
                <label asp-for="CarroId" class="control-label"></label>
                <select asp-for="CarroId" class="form-control" asp-items="ViewBag.Carros"></select>
                <span asp-validation-for="CarroId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
